from sklearn.tree import DecisionTreeClassifier
from sklearn.metrics import accuracy_score, precision_score, recall_score, f1_score, confusion_matrix, roc_auc_score, matthews_corrcoef
import numpy as np

# Decision Tree
dt = DecisionTreeClassifier(random_state=42)
dt.fit(X_train_np, y_train_mapped)
y_pred_dt = dt.predict(X_test_np)

print("\nDecision Tree Classifier")
print("Accuracy:", accuracy_score(y_test_mapped, y_pred_dt))
print("Precision:", precision_score(y_test_mapped, y_pred_dt, average="macro"))
print("Recall:", recall_score(y_test_mapped, y_pred_dt, average="macro"))
print("F1 Score:", f1_score(y_test_mapped, y_pred_dt, average="macro"))
print("MCC:", matthews_corrcoef(y_test_mapped, y_pred_dt))

# For ROC-AUC, we need probability scores
y_prob_dt = dt.predict_proba(X_test_np)
print("ROC-AUC:", roc_auc_score(y_test_mapped, y_prob_dt, multi_class="ovr"))

print("Confusion Matrix:\n", confusion_matrix(y_test_mapped, y_pred_dt))
