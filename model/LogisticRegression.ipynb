from sklearn.linear_model import LogisticRegression
from sklearn.metrics import accuracy_score, precision_score, recall_score, f1_score, confusion_matrix, roc_auc_score, matthews_corrcoef
import numpy as np

# Logistic Regression
log_reg = LogisticRegression(max_iter=2000)  # increased iterations to avoid convergence warning
log_reg.fit(X_train_np, y_train_mapped)
y_pred_log = log_reg.predict(X_test_np)

print("\nLogistic Regression")
print("Accuracy:", accuracy_score(y_test_mapped, y_pred_log))
print("Precision:", precision_score(y_test_mapped, y_pred_log, average="macro"))
print("Recall:", recall_score(y_test_mapped, y_pred_log, average="macro"))
print("F1 Score:", f1_score(y_test_mapped, y_pred_log, average="macro"))
print("MCC:", matthews_corrcoef(y_test_mapped, y_pred_log))

# For ROC-AUC, we need probability scores
y_prob_log = log_reg.predict_proba(X_test_np)
print("ROC-AUC:", roc_auc_score(y_test_mapped, y_prob_log, multi_class="ovr"))

print("Confusion Matrix:\n", confusion_matrix(y_test_mapped, y_pred_log))
