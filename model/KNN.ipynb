from sklearn.neighbors import KNeighborsClassifier
from sklearn.metrics import accuracy_score, precision_score, recall_score, f1_score, confusion_matrix, roc_auc_score, matthews_corrcoef
import numpy as np

# KNN Classifier
knn = KNeighborsClassifier(n_neighbors=5)
knn.fit(X_train_np, y_train_mapped)
y_pred_knn = knn.predict(X_test_np)

print("\nK-Nearest Neighbor Classifier")
print("Accuracy:", accuracy_score(y_test_mapped, y_pred_knn))
print("Precision:", precision_score(y_test_mapped, y_pred_knn, average="macro"))
print("Recall:", recall_score(y_test_mapped, y_pred_knn, average="macro"))
