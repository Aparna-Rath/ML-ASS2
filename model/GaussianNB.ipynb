from sklearn.naive_bayes import GaussianNB
from sklearn.metrics import accuracy_score, precision_score, recall_score, f1_score, confusion_matrix, roc_auc_score, matthews_corrcoef
import numpy as np

# Naive Bayes (Gaussian)
nb = GaussianNB()
nb.fit(X_train_np, y_train_mapped)
y_pred_nb = nb.predict(X_test_np)

print("\nNaive Bayes Classifier (Gaussian)")
print("Accuracy:", accuracy_score(y_test_mapped, y_pred_nb))
print("Precision:", precision_score(y_test_mapped, y_pred_nb, average="macro"))
print("Recall:", recall_score(y_test_mapped, y_pred_nb, average="macro"))
print("F1 Score:", f1_score(y_test_mapped, y_pred_nb, average="macro"))
print("MCC:", matthews_corrcoef(y_test_mapped, y_pred_nb))

# For ROC-AUC, we need probability scores
y_prob_nb = nb.predict_proba(X_test_np)
print("ROC-AUC:", roc_auc_score(y_test_mapped, y_prob_nb, multi_class="ovr"))

print("Confusion Matrix:\n", confusion_matrix(y_test_mapped, y_pred_nb))
