from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import accuracy_score, precision_score, recall_score, f1_score, confusion_matrix, roc_auc_score, matthews_corrcoef
import numpy as np

# Random Forest Classifier
rf = RandomForestClassifier(random_state=42)
rf.fit(X_train_np, y_train_mapped)
y_pred_rf = rf.predict(X_test_np)

print("\nRandom Forest Classifier")
print("Accuracy:", accuracy_score(y_test_mapped, y_pred_rf))
print("Precision:", precision_score(y_test_mapped, y_pred_rf, average="macro"))
print("Recall:", recall_score(y_test_mapped, y_pred_rf, average="macro"))
print("F1 Score:", f1_score(y_test_mapped, y_pred_rf, average="macro"))
print("MCC:", matthews_corrcoef(y_test_mapped, y_pred_rf))

# For ROC-AUC, we need probability scores
y_prob_rf = rf.predict_proba(X_test_np)
print("ROC-AUC:", roc_auc_score(y_test_mapped, y_prob_rf, multi_class="ovr"))

print("Confusion Matrix:\n", confusion_matrix(y_test_mapped, y_pred_rf))
